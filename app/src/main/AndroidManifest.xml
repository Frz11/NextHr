<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.cristianion.nexthr">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_CALENDAR" />
    <uses-permission android:name="android.permission.WRITE_CALENDAR" />


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <service
            android:name=".Service.NotificationsService"
            android:enabled="true"
            android:exported="true"></service>

        <activity
            android:name=".EditEmployeeActivity"
            android:windowSoftInputMode="stateHidden|adjustResize" />
        <activity
            android:name=".EditRoleActivity"
            android:windowSoftInputMode="stateHidden|adjustResize" />
        <activity
            android:name=".AddEmployee"
            android:windowSoftInputMode="stateHidden|adjustResize" />
        <activity
            android:name=".EditDepartmentActivity"
            android:windowSoftInputMode="stateHidden|adjustResize" />
        <activity
            android:name=".AddDepartmentActivity"
            android:windowSoftInputMode="stateHidden|adjustResize" />
        <activity
            android:name=".EditLocationActivity"
            android:windowSoftInputMode="stateHidden|adjustResize" />
        <activity
            android:name=".AddLocationActivity"
            android:windowSoftInputMode="stateHidden|adjustResize" />
        <activity
            android:name=".AddRoleActivity"
            android:windowSoftInputMode="stateHidden|adjustResize" />
        <activity
            android:name=".LoginNewActivity"
            android:label="@string/title_activity_login_new"
            android:windowSoftInputMode="stateHidden|adjustResize" />
        <activity android:name=".LoginActivity" />
        <activity
            android:name=".WelcomeActivity"
            android:windowSoftInputMode="stateHidden|adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".FirstAdminActivity" />
        <activity
            android:name=".MenuActivity"
            android:label="@string/title_activity_menu"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateHidden|adjustResize" />
        <activity android:name=".ChangePasswordActivity" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>