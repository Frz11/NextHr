<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">
    <RelativeLayout
        android:id="@+id/senderLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/messageSender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/message_item_sender"
            android:padding="12dp"
            android:text="Hello how are you?"
            android:textColor="@android:color/white"
            android:textSize="22sp"
            android:layout_alignParentEnd="true"/>

        <TextView
            android:id="@+id/messageTimeSender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="22:00"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/messageSender"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/receiverLayout"
        android:layout_below="@id/senderLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/messageReceiver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/message_item_receiver"
            android:padding="12dp"
            android:text="Hello how are you?"
            android:textColor="@android:color/white"
            android:textSize="22sp"
            android:layout_alignParentStart="true"/>

        <TextView
            android:id="@+id/messageTimeReceiver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="22:00"
            android:layout_alignParentStart="true"
            android:layout_below="@id/messageReceiver"/>
    </RelativeLayout>




</RelativeLayout>