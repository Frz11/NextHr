<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/locationRL"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Street test street"
        android:id="@+id/street"
        android:layout_alignParentStart="true"
        android:textSize="30sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/City"
        android:textSize="24sp"
        android:layout_below="@+id/street"
        android:text="Los Angeles"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/countryncounty"
        android:text="USA,California"
        android:textSize="24sp"
        android:layout_below="@id/City"/>
    <com.example.cristianion.nexthr.FontAwesome
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/icon_trash"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="36sp"
        android:id="@+id/deleteLocation"
        android:layout_below="@id/street"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="5dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/countryncounty"
        android:layout_marginTop="10dp"
        android:background="@android:color/darker_gray" />
</RelativeLayout>