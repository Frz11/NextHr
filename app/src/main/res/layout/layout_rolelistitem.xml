<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <TextView
        android:id="@+id/RoleName"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:text=""
        android:textSize="32sp" />

    <com.example.cristianion.nexthr.FontAwesome
        android:id="@+id/EditRole"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="7dp"
        android:layout_toEndOf="@+id/RoleName"
        android:text="@string/icon_edit"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="32sp" />

    <com.example.cristianion.nexthr.FontAwesome
        android:id="@+id/DeleteRole"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="13dp"
        android:layout_toEndOf="@+id/EditRole"
        android:text="@string/icon_trash"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="32sp" />

</RelativeLayout>